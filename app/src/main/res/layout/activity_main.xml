<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/sotw_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:layout_marginTop="10dp"
        android:textColor="#0a0a02"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/main_image_dial"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@id/main_image_hands"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/compass_dial"
        android:src="@drawable/arrowicon" />

    <ImageView
        android:id="@+id/main_image_hands"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/compass_hands"
        android:src="@drawable/dail" />
    <TextView
        android:id="@+id/teks_bawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_image_hands"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="ddddddd"
        android:textSize="16sp"
        android:layout_marginBottom="40dp" />



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottomAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerunitid">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>




